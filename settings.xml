<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <settings>

        <config>
            <section name="apiSettings">
                <conf name="appId">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="appSecret">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="apiVersion">
                    <type><![CDATA[string]]></type>
                    <defaultvalue><![CDATA[v2.9]]></defaultvalue>
                </conf>
            </section>
            <section name="authSettings">
                <conf name="useRedirectAuthentication">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="redirectUrl">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="maxLoginErrors">
                    <type><![CDATA[integer]]></type>
                    <defaultvalue>3</defaultvalue>
                </conf>
            </section>
            <section name="registration">
                <conf name="allowUnverifiedEmailAddresses">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
            </section>
        </config>

        <window>
            <title>
                <locale group="quiqqer/authfacebook" var="settings.title" />
            </title>
            <params>
                <icon>fa fa-facebook</icon>
            </params>

            <categories>
                <category name="settings">
                    <text>
                        <locale group="quiqqer/authfacebook" var="settings.category.settings.title" />
                    </text>
                    <icon>fa fa-cogs</icon>

                    <settings title="apiSettings" name="apiSettings">
                        <title>
                            <locale group="quiqqer/authfacebook" var="settings.apiSettings.title" />
                        </title>

                        <input conf="apiSettings.appId" type="text">
                            <text>
                                <locale group="quiqqer/authfacebook" var="settings.apiSettings.appId.title" />
                            </text>
                            <description>
                                <locale group="quiqqer/authfacebook" var="settings.apiSettings.appId.description" />
                            </description>
                        </input>

                        <input conf="apiSettings.appSecret" type="text">
                            <text>
                                <locale group="quiqqer/authfacebook" var="settings.apiSettings.appSecret.title" />
                            </text>
                            <description>
                                <locale group="quiqqer/authfacebook" var="settings.apiSettings.appSecret.description" />
                            </description>
                        </input>

                        <input conf="apiSettings.apiVersion" type="text">
                            <text>
                                <locale group="quiqqer/authfacebook" var="settings.apiSettings.apiVersion.title" />
                            </text>
                            <description>
                                <locale group="quiqqer/authfacebook" var="settings.apiSettings.apiVersion.description" />
                            </description>
                        </input>
                    </settings>

                    <settings title="registration" name="registration">
                        <title>
                            <locale group="quiqqer/authfacebook" var="settings.registration.title" />
                        </title>

                        <input conf="registration.allowUnverifiedEmailAddresses" type="checkbox">
                            <text>
                                <locale group="quiqqer/authfacebook" var="settings.registration.allowUnverifiedEmailAddresses.title" />
                            </text>
                            <description>
                                <locale group="quiqqer/authfacebook" var="settings.registration.allowUnverifiedEmailAddresses.description" />
                            </description>
                        </input>
                    </settings>

                    <settings title="authSettings" name="authSettings">
                        <title>
                            <locale group="quiqqer/authfacebook" var="settings.authSettings.title" />
                        </title>

                        <input conf="authSettings.useRedirectAuthentication" type="checkbox">
                            <text>
                                <locale group="quiqqer/authfacebook" var="settings.authSettings.useRedirectAuthentication.title" />
                            </text>
                            <description>
                                <locale group="quiqqer/authfacebook" var="settings.authSettings.useRedirectAuthentication.description" />
                            </description>
                        </input>

                        <input conf="authSettings.redirectUrl" type="text">
                            <text>
                                <locale group="quiqqer/authfacebook" var="settings.authSettings.redirectUrl.title" />
                            </text>
                            <description>
                                <locale group="quiqqer/authfacebook" var="settings.authSettings.redirectUrl.description" />
                            </description>
                        </input>

                        <input conf="authSettings.maxLoginErrors" type="text">
                            <text>
                                <locale group="quiqqer/authfacebook" var="settings.authSettings.maxLoginErrors.title" />
                            </text>
                            <description>
                                <locale group="quiqqer/authfacebook" var="settings.authSettings.maxLoginErrors.description" />
                            </description>
                        </input>
                    </settings>

                </category>
            </categories>
        </window>

    </settings>
</quiqqer>